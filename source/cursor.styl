cursor = "data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAYAAAAGBAMAAAAS4vJ7AAAAElBMVEX///////////////////////+65XQCAAAABXRSTlPUzXppDN7WmLAAAAAZSURBVAjXY3ASVGEwDQ1mYA0NAGEQGyQGAC9SA/00lbgwAAAAAElFTkSuQmCC"

html, body
  cursor url(cursor) 3 3, default
  position static

a, button
  cursor url(cursor) 3 3, pointer

input
  cursor url(cursor) 3 3, text

#cursor-outer
  z-index 65536
  position fixed
  transform translate3d(-50%, -50%, 0px)
  height 36px
  width 36px
  border 1px solid #ccc
  border-radius 50%
  pointer-events none
  transition background-color .3s, width .3s, height .3s
#cursor-effect
  z-index 65535
  position fixed
  transform translate3d(-50%, -50%, 0px) scale(0)
  height 80px
  width 80px
  border 4px solid #ccc
  border-radius 50%
  opacity 0
  pointer-events none
